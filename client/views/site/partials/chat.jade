.chat-box(ng-click="focused = true")
	.chat-header(ng-class="{waiting : focused}")
		.name(ng-click="minimizeChat()")
			span(class="{{status}}", ng-class="status{{chatUserId}}")
			| {{chatUser}}
		.controls 
			div(title="Close", ng-click="destroy()", data-toggle="tooltip"): i.fa.fa-close
			div(ng-if="isFriend"): i.fa.fa-user-plus(title="Add Friend", ng-click="addFriend(chatUserId)")
	.chat-body
		.msg-body
			.msg(ng-repeat="msg in messages")
				.right-msg(ng-if="msg.dir === 'right'")
					.msg-user {{msg.user}}
					.msg-msg {{msg.msg}}
					.right-arrow.arrow
				.left-msg(ng-if="msg.dir === 'left'")
					.msg-user {{msg.user}}
					.msg-msg {{msg.msg}}
					.left-arrow.arrow
				.clear
	.chat-footer
		.msg-input
			input(ng-enter="sendMessage()", ng-model="msg", placeholder="Type to {{chatUser}}...")
