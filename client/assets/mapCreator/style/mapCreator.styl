body
	background #333
	
.map-creator  
	.visual-mode 
		float left
		height 40px
		background-color #6A1E1E
		padding 10px
		margin-left 0px
		width 256px
		text-align center
	
	.currentItem 
		display none
		z-index 9999
		top 10px
		border 1px solid black
		position absolute
		left 40px
		background-color #E3E3E3
		padding 5px
		border-radius 5px
		text-align center
		width 75px
		&.cantLay 
			background #973B3B
			color white
		img 
			border 1px solid black
			width 50px
			height 50px

	.menu-hidden
		color white
		background-color #222
		width 35px
		height 500px
		position fixed
		top 50%
		margin-top -250px
		text-align center
		display none
		padding-top 10px
		cursor pointer
	.dimensions 
		position fixed
		right 0
		color white
		background-color #4A73FF
		padding 10px
		top 50%
		margin-top -50px
		height 100px


		input 
			&[type=number]
				color black
			width 50px
			padding 5px
			border-radius 5px
			border 1px solid black

	.resources 
		margin-bottom 10px
		.images
			margin-top 10px

		img
			width 50px
			height 50px
			cursor pointer
		span
			display inline-block
			width 9%
			text-align center
			div
				display inline-block
				height 100%
				padding 10px
				&.selected
					background #444
					border 1px solid black
					border-radius 5px
	canvas
		border 1px solid #eee
		margin 50px 75px

		
	.menu-container 
		border-right 1px solid #777
		border-bottom 1px solid #777
		border-top 1px solid #777
		color white
		background-color #222
		width 400px
		height 500px
		position fixed
		top 50%
		margin-top -250px
		overflow auto
		z-index 10
		
			
		.minimize 
			height 36px
			position absolute
			right 0
			height 40px
			padding 12px 9px
			background-color #333
			width 31px
			cursor pointer
			
			
		.nav 
			border-bottom 1px solid #000
			box-shadow 0 1px 4px 1px #333

			.nav-item 
				float left
				display flex
				height 100%
				padding 10px
				cursor pointer
				border-right 1px solid black
				box-shadow 1px 0 1px 0px #555
				&.selected
					background #333
				&:hover 
					background-color #333
		.title
			border-bottom 1px solid #444
			padding 5px 10px
			.create 
				float right
				cursor pointer
				margin-top 2px
		.body
			padding 10px
		.item
			padding 5px
			cursor pointer
			img
				width 50px
				height 50px
				padding 8px
			&.selected
				background #111
			&:hover
				background #111
		ul
			padding 0
			margin 0
		li
			list-style none
			padding 5px
			cursor pointer
			&.selected
				background #111
			&:hover
				background #111
