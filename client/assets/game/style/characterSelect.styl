.character-select
    .characters 
        img
            width 80px
            height 80px
            cursor pointer
            padding 10px
            &.selected 
                border 1px solid #793131
                background #000
        > div
            margin-right 50px
    .account
        position absolute
        top 5px
        right 20px
        color #222
        font-size 50px
        text-shadow 0px 0px 2px black, 0px 0px 3px #aaa
        cursor pointer
    .play 
        position absolute
        bottom 10px
        left 50%
        margin-left -50px
        width 100px
    

    .play input 
        width 100%
    .character-chosen 
        height 33%
        &:not(:last-child) 
            border-bottom 1px solid #555
        .character-chosen-image 
            float left
            width 40%
            position relative
            height 70%
            border 1px solid black
            background-color #2D1E1E


            .no-character 
                height 36px
                width 100%
                text-align center
                top -30px
                margin-top 50%
                position absolute
            img 
                width 100%
                height 100%
                position absolute
        .user-info
            width 50%
        .character-chosen-name 
            height 24%
        
    


