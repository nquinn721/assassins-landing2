.match-making
	.team
		width 50%
		height 100%
	.team1
		border-right 1px solid #555
	.team2
		border-left 1px solid black
	.characters
		padding 50px
		height 100%
		.character
			height 100%
			text-align center
			position relative
			float left
			
			img 
				width 75px
				height 150px
				margin 10px 
			> div 
				background-color #2F2F2F
				width 120px
				position absolute
				left 50%
				margin-left -60px
				padding 10px
				box-shadow inset 0px 0px 8px 2px rgb(15, 15, 15), 0px 0px 1px 0px #323232
				> div
					background #542626
					background -moz-linear-gradient(top,  #542626 0%, #492222 51%, #210f0f 100%)
					background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#542626), color-stop(51%,#492222), color-stop(100%,#210f0f))
					background -webkit-linear-gradient(top,  #542626 0%,#492222 51%,#210f0f 100%)
					background -o-linear-gradient(top,  #542626 0%,#492222 51%,#210f0f 100%)
					background -ms-linear-gradient(top,  #542626 0%,#492222 51%,#210f0f 100%)
					background linear-gradient(to bottom,  #542626 0%,#492222 51%,#210f0f 100%) 
					border 1px solid #555
					

		
		.character:nth-child(1):nth-last-child(1) 
			width 100%
		

		
		.character:nth-child(1):nth-last-child(2),
		.character:nth-child(2):nth-last-child(1) 
			width 50%
		

		
		.character:nth-child(1):nth-last-child(3),
		.character:nth-child(2):nth-last-child(2),
		.character:nth-child(3):nth-last-child(1) 
			width 33.3333%
		

		
		.character:nth-child(1):nth-last-child(4),
		.character:nth-child(2):nth-last-child(3),
		.character:nth-child(3):nth-last-child(2),
		.character:nth-child(4):nth-last-child(1) 
			width 25%


	.bottom-loader
		width 50%
		margin-left 25%
		height 15px
		margin-top 10px
		position relative
		.loader-overlay 
			width 100%
			height 100%
			position absolute
			top 0
			left 0
			background-color transparent
			z-index 1
			box-shadow inset 0 0 6px 0px rgb(10, 10, 10), 0 0 1px #3A3A3A
		.bar 
			background #0c1b3f
			background -moz-linear-gradient(top,  #0c1b3f 0%, #132d66 100%)
			background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#0c1b3f), color-stop(100%,#132d66))
			background -webkit-linear-gradient(top,  #0c1b3f 0%,#132d66 100%)
			background -o-linear-gradient(top,  #0c1b3f 0%,#132d66 100%)
			background -ms-linear-gradient(top,  #0c1b3f 0%,#132d66 100%)
			background linear-gradient(to bottom,  #0c1b3f 0%,#132d66 100%)

			width 100%
			height 100%
			position absolute
			top 0
			left 0
	
		
		
